---
// Import the CSS from the `src/styles` directory
import ClientRouter from 'astro/components/ClientRouter.astro';
import '../styles/global.css';
import { SignedIn, SignedOut, UserButton } from "@clerk/astro/components";
import Footer from '@components/Footer.astro';
---

<html lang="es">
  <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Utils for oxxogh" />
		<meta name="viewport" content="width=device-width" />
    <ClientRouter /> 
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="flex flex-col min-h-screen">
    <header class="p-4 bg-gray-800 text-white container mx-auto flex items-center justify-between">
      <h1>OXXOGH-DEVSECOPS</h1>
      <nav>
        <SignedOut>
          <a class="text-white font-semibold rounded-full px-4 py-2" href="/sign-in">Sign In</a>
        </SignedOut>
        <SignedIn>
          <UserButton />
        </SignedIn>
      </nav>
    </header>
    <main class="flex-grow flex container mx-auto">
      <slot />
    </main>
    <Footer />
      
  </body>
</html>
